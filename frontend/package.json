{
  "name": "JAMS",
  "version": "1.0.0",
  "description": "Just a Microbiology System (JAMS) - a suite for analyzing microbiological sequencing data for use on NIH HPC systems (Biowulf)",
  "main": "main.js",
  "scripts": {
    "start": "parcel public/index.html --open",
    "build": "parcel build public/index.html --dist-dir dist --public-url ./ && xcopy /E /I ..\\R dist\\R && copy main.js dist\\main.js && copy preload.js dist\\preload.js",
    "electron-dev": "cross-env concurrently \"npm run start\" \"wait-on http://localhost:1234 && electron .\"",
    "electron": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.0",
    "@mui/material": "^6.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.6",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^2.0.0",
    "parcel": "^2.13.3",
    "process": "^0.11.10",
    "wait-on": "^5.3.0"
  },
  "targets": {
    "main": false,
    "default": {
      "context": "browser",
      "distDir": "./dist"
    }
  },
  "build": {
    "appId": "com.example.react-electron-app",
    "win": {
      "sign": false
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "../JAMSinstaller_BW",
        "to": "JAMSinstaller_BW"
      },
      {
        "from": "../",
        "to": "JAMS_BW_dev",
        "filter": [
          "!dist/**",
          "!node_modules/**",
          "!frontend/**"
        ]
      }
    ]
  }
}